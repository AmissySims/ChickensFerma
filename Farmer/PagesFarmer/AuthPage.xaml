<Page x:Class="Farmer.PagesFarmer.AuthPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Farmer.PagesFarmer"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Farmer">

    <Grid>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="ВХОД" HorizontalAlignment="Center" Margin="10" />
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="Логин" Margin="10"/>
                <TextBox x:Name="LoginTb" Width="100" Height="30"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Пароль" Margin="10"/>
                <PasswordBox x:Name="PasswordTb" Width="100" Height="30"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button x:Name="EnterBt" Content="Вход" Margin="5" Click="EnterBt_Click"/>
                <Button x:Name="RegBt" Content="Регистрация" Margin="5" Click="RegBt_Click"/>
            </StackPanel>
           
        </StackPanel>
    </Grid>
</Page>
