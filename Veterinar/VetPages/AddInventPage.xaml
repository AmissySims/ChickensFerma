<Page x:Class="Veterinar.VetPages.AddInventPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Veterinar.VetPages"
      mc:Ignorable="d" 
      DataContext="{Binding RelativeSource={RelativeSource Self}}"
      
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddInventPage">

    <Grid>
        <StackPanel Orientation="Horizontal">
            <StackPanel Orientation="Vertical" Margin="10">
                <Image x:Name="ImInvent"  Width="180" Height="180" Source="{Binding Inventory.Photo}" Margin="5"/>
                <Button x:Name="PhotoBt" Content="Добавить фото" Click="PhotoBt_Click" />
            </StackPanel>
            <TextBlock Text="title"/>
            <TextBlock Text="{Binding Inventory.Title}"/>
            <Button x:Name="add" Content="gghhg" HorizontalAlignment="Center" VerticalAlignment="Center" Click="add_Click"/>
        </StackPanel>
    </Grid>
</Page>
